{
  "verbose": false,
  "restartable": "rs",
  "events": {
    "restart": "echo \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
  },
  "ext": "js",
  "ignore": [
    ".git",
    "build",
    "npm-debug.log",
    "node_modules/**/*",
    "src/assets/**/*"
  ],
  "watch": [
    "src/client/components/App",
    "src/server",
    "src/shared",
    "index.js",
    "core"
  ]
}
